@model Database_201_721.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" asp-controller="UserManage" >
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group mt-2" style = "width:250px">
        <label asp-for="FirstName" class="control-label">Имя пользователя</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group mt-2" style = "width:250px">
        <label asp-for="LastName" class="control-label">Фамилия пользователя</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group mt-2" style = "width:250px">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mt-2"  style = "width:250px">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group mt-2" style = "width:250px">
        <label asp-for="Year" class="control-label">Год рождения</label>
        <input type="number" asp-for="Year" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>

</form>