@model Database_201_721.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<form asp-action="AddOrEditGroup" asp-controller="UserManage">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

     <label for="GroupId">Выберите группу:</label>
     <select name="GroupId">

     @foreach(var group in Model.Groups)
     {  
        <option value="@group.Id">@group.Id @group.GroupName</option>
     }

    </select>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>

